<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".HomeActivity">

    <!-- Animated Background Grid Pattern -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:background="@drawable/ic_launcher_background"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Header Section with Glow Effect -->
            <androidx.cardview.widget.CardView
                android:id="@+id/header_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="24dp"
                app:cardElevation="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš¡ X-O âš¡"
                        android:textSize="48sp"
                        android:textColor="@color/neon_blue"
                        android:fontFamily="sans-serif-black"
                        android:shadowColor="@color/neon_blue"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="30"
                        android:letterSpacing="0.15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOURNAMENT EDITION"
                        android:textSize="14sp"
                        android:textColor="@color/neon_green"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.2"
                        android:layout_marginTop="4dp"
                        android:shadowColor="@color/neon_green"
                        android:shadowRadius="10"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Game Mode Selection with Modern Cards -->
            <androidx.cardview.widget.CardView
                android:id="@+id/mode_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#1E1E1E"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:layout_constraintTop_toBottomOf="@id/header_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ® MODE DE JEU"
                        android:textSize="16sp"
                        android:textColor="@color/neon_pink"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="16dp"
                        android:shadowColor="@color/neon_pink"
                        android:shadowRadius="8"/>

                    <RadioGroup
                        android:id="@+id/radio_group_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radio_pvp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘¥ Joueur vs Joueur"
                            android:textColor="@color/text_color_primary"
                            android:textSize="16sp"
                            android:buttonTint="@color/neon_blue"
                            android:checked="true"
                            android:padding="12dp"
                            android:background="?attr/selectableItemBackground"/>

                        <RadioButton
                            android:id="@+id/radio_pve"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¤– Joueur vs Bot"
                            android:textColor="@color/text_color_primary"
                            android:textSize="16sp"
                            android:buttonTint="@color/neon_blue"
                            android:padding="12dp"
                            android:layout_marginTop="8dp"
                            android:background="?attr/selectableItemBackground"/>
                    </RadioGroup>

                    <!-- Difficulty Selection with Animated Reveal -->
                    <LinearLayout
                        android:id="@+id/layout_difficulty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        android:padding="16dp"
                        android:background="@drawable/neon_border_bg"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš”ï¸ DIFFICULTÃ‰"
                            android:textSize="14sp"
                            android:textColor="@color/neon_green"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="12dp"/>

                        <RadioGroup
                            android:id="@+id/radio_group_difficulty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radio_easy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸŸ¢ Facile - DÃ©butant"
                                android:textColor="@color/text_color_primary"
                                android:buttonTint="@color/neon_green"
                                android:checked="true"
                                android:padding="8dp"/>

                            <RadioButton
                                android:id="@+id/radio_medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸŸ¡ Moyen - IntermÃ©diaire"
                                android:textColor="@color/text_color_primary"
                                android:buttonTint="@color/neon_green"
                                android:padding="8dp"
                                android:layout_marginTop="4dp"/>

                            <RadioButton
                                android:id="@+id/radio_hard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”´ Difficile - Expert (Minimax)"
                                android:textColor="@color/text_color_primary"
                                android:buttonTint="@color/neon_green"
                                android:padding="8dp"
                                android:layout_marginTop="4dp"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Settings Card with Enhanced Design -->
            <androidx.cardview.widget.CardView
                android:id="@+id/settings_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#1E1E1E"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:layout_constraintTop_toBottomOf="@id/mode_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš™ï¸ PARAMÃˆTRES"
                        android:textSize="16sp"
                        android:textColor="@color/neon_pink"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="16dp"
                        android:shadowColor="@color/neon_pink"
                        android:shadowRadius="8"/>

                    <!-- Symbol Selection with Icons -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Votre symbole"
                        android:textSize="14sp"
                        android:textColor="@color/neon_blue"
                        android:layout_marginBottom="8dp"/>

                    <RadioGroup
                        android:id="@+id/radio_group_symbol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="20dp">

                        <RadioButton
                            android:id="@+id/radio_x"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="âœ– X"
                            android:checked="true"
                            android:textSize="20sp"
                            android:textColor="@color/neon_pink"
                            android:buttonTint="@color/neon_pink"
                            android:gravity="center"
                            android:background="@drawable/neon_border_bg"
                            android:layout_marginEnd="8dp"
                            android:shadowColor="@color/neon_pink"
                            android:shadowRadius="10"/>

                        <RadioButton
                            android:id="@+id/radio_o"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="â­• O"
                            android:textSize="20sp"
                            android:textColor="@color/neon_blue"
                            android:buttonTint="@color/neon_blue"
                            android:gravity="center"
                            android:background="@drawable/neon_border_bg"
                            android:layout_marginStart="8dp"
                            android:shadowColor="@color/neon_blue"
                            android:shadowRadius="10"/>
                    </RadioGroup>

                    <!-- Tournament Size Selector -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ† Nombre de parties"
                        android:textSize="14sp"
                        android:textColor="@color/neon_blue"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/spinner_nb_parties"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/neon_green"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"
                        android:elevation="4dp"/>

                    <!-- Music Toggle with Icon -->
                    <Button
                        android:id="@+id/btn_toggle_music"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸŽµ Musique : ON"
                        style="@style/NeonButton"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Buttons with Gradient Effects -->
            <LinearLayout
                android:id="@+id/action_buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/settings_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <Button
                    android:id="@+id/btn_jouer"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="â–¶ï¸ JOUER"
                    style="@style/NeonButton"
                    android:textSize="22sp"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-black"
                    android:elevation="16dp"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_principe"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="ðŸ“– RÃ¨gles"
                        style="@style/NeonButton"
                        android:textSize="14sp"
                        android:layout_marginEnd="6dp"/>

                    <Button
                        android:id="@+id/btn_retrouver_scores"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="ðŸ“Š Scores"
                        style="@style/NeonButton"
                        android:textSize="14sp"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>